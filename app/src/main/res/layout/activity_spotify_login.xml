<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/buttonSpotifyLoginBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_media_previous"
        android:tint="@color/white" />

    <TextView
        android:id="@+id/textSpotifyLoginTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/spotify_login_title"
        android:textColor="@color/spotify_green"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textSpotifyLoginSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/spotify_login_subtitle"
        android:textColor="@color/text_secondary_dark"
        android:textSize="15sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSpotifyLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/spotify_login" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSpotifyLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/spotify_logout"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textSpotifyLoginStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_player_panel"
        android:padding="12dp"
        android:text="@string/spotify_login_required"
        android:textColor="@color/text_secondary_dark"
        android:textSize="14sp" />
</LinearLayout>
